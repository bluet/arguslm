# ArgusLM Configuration
# Copy this file to .env and modify as needed

# Backend Configuration
SECRET_KEY=your-secret-key-here-change-in-production
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# Database Configuration
# For PostgreSQL (recommended for production):
DATABASE_URL=postgresql+asyncpg://arguslm:arguslm_password@db:5432/arguslm
# For SQLite with aiosqlite (development only):
# DATABASE_URL=sqlite+aiosqlite:///./arguslm.db

# PostgreSQL Configuration (for docker-compose db service)
DB_USER=arguslm
DB_PASSWORD=arguslm_password
DB_NAME=arguslm

# LiteLLM Configuration
LITELLM_LOG_LEVEL=INFO

# Frontend Configuration
NODE_ENV=production
VITE_API_URL=http://localhost:8000

# Provider API Keys (add as needed)
# OPENAI_API_KEY=your-key-here
# ANTHROPIC_API_KEY=your-key-here
# GOOGLE_API_KEY=your-key-here
